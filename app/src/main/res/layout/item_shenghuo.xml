<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <!--Description:有商有客菜品条目 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="60px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sh_greens"
            android:layout_width="360px"
            android:layout_height="250px"
            android:background="@drawable/shape_label_gray"
            android:scaleType="centerCrop"
            android:src="@mipmap/greens"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tv_sh_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="鲜生活•喵小春的鱼"
                    android:textColor="@color/colortitletext"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_sh_P"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70px"
                    android:src="@mipmap/p"/>

                <ImageView
                    android:id="@+id/iv_sh_wifi"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/wifi"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                >

                <com.example.qipintongzhongguozongbu.myqipintong.ratingbar.MaterialRatingBar
                    android:id="@+id/mrb_star"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="330px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:progressTint="@color/colororange"
                    android:rating="2"
                    android:stepSize="0.1"/>

                <TextView
                    android:id="@+id/tv_sh_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/mrb_star"
                    android:text="4.2分"
                    android:textColor="@color/colororange"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="110px"
                    android:text="人均 :"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:id="@+id/tv_sh_CNY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:cursorVisible="true"
                    android:text="¥ 39"
                    android:textColor="@color/colororange"
                    android:textSize="@dimen/sp_14"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_sh_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:text="大雁塔"
                        android:textColor="@color/colormuchgray"
                        android:textSize="@dimen/sp_14"/>


                    <TextView
                        android:id="@+id/tv_sh_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/tv_sh_location"
                        android:text="西餐"
                        android:textColor="@color/colormuchgray"
                        android:textSize="@dimen/sp_14"/>

                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/finelinbackground"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/viewlinbackground"/>

</LinearLayout>