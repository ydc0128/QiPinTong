<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scrollbars="none">
    <!--Description: -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />


        <RelativeLayout
            android:id="@+id/ll_friend"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:src="@mipmap/pengicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="180px"
                android:text="朋友动态"
                android:textColor="@color/colortextgray"
                android:textSize="16sp" />


            <ImageView

                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/right" />

            <FrameLayout
                android:id="@+id/fl_detect_message"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="450px">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/circle_red" />

                <TextView
                    android:id="@+id/tv_detect_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />


            </FrameLayout>


        </RelativeLayout>


        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />


        <RelativeLayout
            android:id="@+id/ll_gold"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:src="@mipmap/fujinicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="180px"
                android:text="附近"
                android:textColor="@color/colortextgray"
                android:textSize="16sp"


                />


            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/right" />
        </RelativeLayout>


        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />


        <RelativeLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="95px"
                android:layout_height="95px"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45px"
                android:src="@mipmap/jiazhangicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="180px"
                android:text="家长界"
                android:textColor="@color/colortextgray"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <include layout="@layout/finelinbackground" />

        <RelativeLayout
            android:id="@+id/ll_live"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45px"
                android:src="@mipmap/ysyk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="180px"
                android:text="生活圈"
                android:textColor="@color/colortextgray"
                android:textSize="16sp"

                />

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/right" />
        </RelativeLayout>


        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <RelativeLayout
            android:id="@+id/ll_tb"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:src="@mipmap/fxtongbi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="180px"
                android:text="抢通币"
                android:textColor="@color/colortextgray"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/right" />

        </RelativeLayout>

        <include layout="@layout/finelinbackground" />

        <RelativeLayout
            android:id="@+id/ll_drb"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:src="@mipmap/fxtongbi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="180px"
                android:text="达人帮"
                android:textColor="@color/colortextgray"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/right" />

        </RelativeLayout>


        <include layout="@layout/view15background" />

        <include layout="@layout/view15background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBEBEB" />
    </LinearLayout>
</ScrollView>