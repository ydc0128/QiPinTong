<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <!--Description:创投天下 投资机构的条目-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/iv_item_give_money"
            android:layout_width="300px"
            android:layout_height="300px"
            android:background="@drawable/rectangle_lin"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_2"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30px"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_give_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="9"
                    android:singleLine="true"
                    android:text="中国银江投资集团"
                    android:textColor="@color/colortitletext"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:id="@+id/iv_give_money_vip"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="300px"
                    android:layout_toRightOf="@+id/tv_give_money_title"
                    android:src="@drawable/vip"
                    />


                <TextView
                    android:id="@+id/tv_give_money_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="423个"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_give_money_number"
                    android:text="成功投资 : "
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="领域 : "
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_give_money_scope"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="社交. 电子商务. 媒体分类"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/location"
                    />


                <TextView
                    android:id="@+id/tv_give_money_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60px"
                    android:text="雁塔区"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/tv_give_money_see_numer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="3288"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/tv_give_money_see_numer"
                    android:src="@drawable/eyeimage"
                    />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view15background"/>

</LinearLayout>