<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <!--Description:创投天下 投资人列表 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:orientation="horizontal">

        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/iv_give_person_icon"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="40px"
            android:background="@drawable/rectangle_lin"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="35px"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_give_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="任星星"
                    android:textColor="@color/colortitletext"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:id="@+id/iv_give_person_vip"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/tv_give_person_name"
                    android:src="@mipmap/vip_yellow"/>

                <TextView
                    android:id="@+id/tv_give_person_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="投资经理"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_give_company"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="中国银江投资集团"
                android:textColor="@color/colorgray"
                android:textSize="14sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_give_person_see_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="3288"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:id="@+id/iv_give_preson_see"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@id/tv_give_person_see_number"
                    android:src="@drawable/eyeimage"
                    />

                <TextView
                    android:id="@+id/tv_give_person_lingyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="领域 : "
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_give_person_domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_give_person_lingyu"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="健康管理,医疗平台"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/finelinbackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的优势 : "
            android:textColor="@color/colorgray"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8年的销售经验 , 沟通能力强, 口齿伶俐 ,思维敏捷 ,组织能力强"
            android:textColor="@color/colorgray"
            android:textSize="14sp"
            />

    </LinearLayout>


    <include layout="@layout/view20background"/>

</LinearLayout>