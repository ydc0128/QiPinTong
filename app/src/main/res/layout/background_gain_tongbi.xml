<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通币余额为10个，预计月收益0个"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="通币数量"
    android:layout_marginTop="100px"
    android:layout_marginLeft="50px"
    android:textColor="@color/colorBlack"
    android:textSize="@dimen/sp_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="50px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="50px"
            android:src="@mipmap/fxtongbi"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="450px"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_tongbib_cunru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部存入"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50px"
                android:textColor="@color/colorblue"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        </LinearLayout>
    <include layout="@layout/view10background"/>
    <TextView
        android:id="@+id/tv_tongbi_riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预计到账时间3月24日"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:layout_marginBottom="50px"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="50px"
        android:orientation="horizontal">
<CheckBox
    android:id="@+id/cb_tongbi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已经阅读并同意服务协议及规则"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="100px">
        <Button
            android:id="@+id/bt_tongbi_queding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorblue"
            android:textColor="@color/colorWhite"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>