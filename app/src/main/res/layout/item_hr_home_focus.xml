<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--Description:HR Home 看点条目-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:orientation="horizontal">

        <com.example.qipintongzhongguozongbu.myqipintong.view.CircleImageView
            android:id="@+id/CIV_hr_home_focus_icon"
            android:layout_width="120px"
            android:layout_height="120px"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hr_home_focus_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="韩雪冬"
                    android:textColor="@color/colortitletext"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/iv_hr_home_vip"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/vip_yellow"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hr_home_focus_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="安徽合肥"
                    android:textColor="@color/colorgray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_hr_home_focus_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:text="2016-10-28"
                    android:textColor="@color/colorgray"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_hr_home_focus_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:lineSpacingExtra="10px"
        android:text="雨中的城市走走停停看看 , 你们的城市下雨了吗"
        android:textColor="@color/colortitletext"
        android:textSize="14sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hr_home_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_edittext"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_hr_home_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/relaynomai"

                    />

                <TextView
                    android:id="@+id/tv_item_share_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="5万"
                    android:textColor="@color/colormuchgray"
                    android:textSize="10sp"
                    />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="1sp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorlinegray"
            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_hr_home_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/comment"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="3万"
                    android:textColor="@color/colormuchgray"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1sp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorlinegray"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_hr_home_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/zan"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="3万"
                    android:textColor="@color/colormuchgray"
                    android:textSize="10sp"
                    />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>