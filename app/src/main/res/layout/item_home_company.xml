<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--Description:首页全职工作的条目-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <FrameLayout
        android:layout_width="520px"
        android:layout_height="520px">

        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/siv_home_company"
            android:layout_width="520px"
            android:layout_height="520px"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@drawable/venture"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="65px"
            android:alpha="0.4"
            android:background="@color/colorBlack"
            />

        <RelativeLayout
            android:id="@+id/rl_company"
            android:layout_width="520px"
            android:layout_height="85px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="65px"
            >

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:ellipsize="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="康威通信"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/iv_company_vip"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5px"
                android:layout_toRightOf="@+id/tv_company_name"
                android:src="@mipmap/vip"
                />

            <TextView
                android:id="@+id/tv_company_catTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxEms="5"
                android:singleLine="true"
                android:text="银行客户代理"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                />


        </RelativeLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="520px"
        android:layout_height="170px"
        android:layout_marginTop="-65px"
        android:background="@color/colorWhiteBack"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_company_location"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:src="@mipmap/location"
                />

            <TextView
                android:id="@+id/tv_company_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_company_location"
                android:text="西安"
                android:textColor="@color/colormuchgray"
                android:textSize="14sp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:src="@mipmap/time_image"
                    />

                <TextView
                    android:id="@+id/tv_company_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="3年"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_company_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10px"
                android:text="本科"
                android:textColor="@color/colormuchgray"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/iv_company_education"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginRight="5px"
                android:layout_toLeftOf="@+id/tv_company_education"
                android:src="@mipmap/acaimgae"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_company_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:layout_marginRight="10px"
                android:text="3-5"
                android:textColor="@color/colororange"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/tv_company_see_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:text="9527"
                android:textColor="@color/colormuchgray"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/iv_company_eye"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_marginRight="5px"
                android:layout_toLeftOf="@+id/tv_company_see_number"
                android:src="@mipmap/eyeimage"
                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>