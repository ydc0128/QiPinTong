<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <!--Description: 创投天下 投资机构 投资人详情页面-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160px"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="530px"
                android:background="@color/colorfont"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_give_money_person_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/background"
                        />
                </FrameLayout>

                <com.example.qipintongzhongguozongbu.myqipintong.view.CircleImageView
                    android:id="@+id/civ_give_money_person_icon"
                    android:layout_width="230px"
                    android:layout_height="230px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35px"
                    android:src="@drawable/icon"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/civ_give_money_person_icon"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_give_money_person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="韩雪冬"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_give_money_person_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_vertical"
                                android:text="银奖资本"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/tv_give_money_person_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20px"
                                android:gravity="center_vertical"
                                android:text="投资经理"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                />


                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="55px"
                                android:layout_height="55px"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/qpt_map_image"
                                />

                            <TextView
                                android:id="@+id/tv_give_money_person_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:text="杭州"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

            <include layout="@layout/viewlinbackground"/>

            <include layout="@layout/viewlinbackground"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginTop="10px"
                android:text="个人简介"
                android:textColor="@color/colortitletext"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_give_money_person_intro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:lineSpacingExtra="10px"
                android:text="最不明智的做法就是要么不努力，要么一边努力一边急着出成绩，晒成绩，专挑一些今天做了明天就出成果的快速迭代的事，那样最难培养个人实力。这方面的事也不少，比如：发传单。发一天，第二天就能把工资骄傲地晒到朋友圈求赞，但你的实力不增不减，年底你的个人能力收获表上，只能写着一个人人都会的技能“发传单”；但要是学一门语言呢？第一天到第三百天可能都没有工资可晒，但坚持一年，两年，这门本事够也许就够你吃一辈子。"
                android:textColor="@color/colormuchgray"
                android:textSize="14sp"
                />

            <include layout="@layout/viewlinbackground"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginTop="10px"
                android:text="我的优势"
                android:textColor="@color/colortitletext"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_give_money_person_good"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:lineSpacingExtra="10px"
                android:text="年轻的时候，专拿出个三年五载的时间，在某一领域精耕细作，逐步精进，少与人攀比，把三十岁前当谜面，把四十岁后当谜底。舍得放长线，才能钓大鱼。”"
                android:textColor="@color/colormuchgray"
                android:textSize="14sp"
                />

            <include layout="@layout/viewlinbackground"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginTop="10px"
                android:text="投资偏好"
                android:textColor="@color/colortitletext"
                android:textSize="16sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:descendantFocusability="blocksDescendants"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_give_money_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    ></android.support.v7.widget.RecyclerView>


            </RelativeLayout>

            <include layout="@layout/viewlinbackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginTop="10px"
                android:text="投资机构"
                android:textColor="@color/colortitletext"
                android:textSize="16sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_give_money_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    ></android.support.v7.widget.RecyclerView>


            </RelativeLayout>

            <include layout="@layout/viewlinbackground"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <include layout="@layout/bottom_button"/>

    </RelativeLayout>


</RelativeLayout>