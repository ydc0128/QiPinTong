<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--驾照类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:background="@color/colorlinegray">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/tv_dialog_di_back"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/tv_dialog_di_confirm"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@color/black"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_dialog_driving_license_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不设置"
        android:padding="30px"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"/>
    <include layout="@layout/finelinbackground"/>
    <TextView
        android:id="@+id/tv_dialog_driving_license_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"
        android:padding="30px"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"/>
    <include layout="@layout/finelinbackground"/>
    <TextView
        android:id="@+id/tv_dialog_driving_license_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B"
        android:padding="30px"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"/>
    <include layout="@layout/finelinbackground"/>
    <TextView
        android:id="@+id/tv_dialog_driving_license_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:padding="30px"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"/>
    <include layout="@layout/finelinbackground"/>
    <TextView
        android:id="@+id/tv_dialog_driving_license_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其他"
        android:padding="30px"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"/>
    <include layout="@layout/finelinbackground"/>
</LinearLayout>