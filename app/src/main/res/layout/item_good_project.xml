<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <!--Description: -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/siv_item_project_icon"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginLeft="30px"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_item_project_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="摩拜单车"
                    android:textColor="@color/colortextgray"
                    android:textSize="16sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/tv_item_project_title"
                    android:background="@drawable/shape_blue_lin"
                    android:paddingBottom="5px"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:paddingTop="5px"
                    android:text="天使轮"
                    android:textColor="@color/colorblue"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/tv_item_project_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="150W"
                    android:textColor="@color/colororange"
                    android:textSize="16sp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_item_project_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="移动互联网"
                    android:textColor="@color/colorgray"
                    android:textSize="16sp"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/location"
                    />


                <TextView
                    android:id="@+id/tv_item_project_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70px"
                    android:text="杭州"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/tv_item_project_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_item_project_praise"
                    android:text="9527"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5px"
                    android:layout_toLeftOf="@+id/tv_item_project_number"
                    android:src="@mipmap/eyeimage"
                    />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


    <include

        layout="@layout/view15background"

        />


</LinearLayout>