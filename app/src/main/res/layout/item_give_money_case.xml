<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/colorWhite"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--Description:创投天下 投资机构详情中投资案例条目-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_give_money_case_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="2016.11"
                android:textColor="@color/colorgray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_give_money_case_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:text="东家-有朋网络"
                android:textColor="@color/colortextgray"
                android:textSize="16sp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_give_money_case_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="800万人民币A轮融资"
            android:textColor="@color/colorgray"
            android:textSize="14sp"/>

    </LinearLayout>

    <include layout="@layout/finelinbackground"/>

</LinearLayout>