<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--Description:创投天下 投资人详情 投资机构条目 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_give_money_company_icon"
            android:layout_width="330px"
            android:layout_height="220px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_6"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_give_money_company_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:text="中国银江投资集团"
                    android:textColor="@color/colortextgray"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_give_money_company_vip"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/vip"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_give_money_company_lingyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="领域 : "
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_give_money_company_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="60px"
                    android:layout_toRightOf="@+id/tv_give_money_company_lingyu"
                    android:singleLine="true"
                    android:text="社交 , 电子商务 , 媒体分类"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_give_money_company_nmuber"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="5位投资人"
                android:textColor="@color/colormuchgray"
                android:textSize="14sp"
                />


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/viewlinbackground"/>

</LinearLayout>