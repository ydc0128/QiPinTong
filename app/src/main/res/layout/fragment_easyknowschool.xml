<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--Description: -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_easy_school_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/back_blue"
            />

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/STL_easy_school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@+id/iv_easy_school_add"
            android:layout_toRightOf="@+id/iv_easy_school_back"
            tl:tl_indicator_color="@color/colorblue"
            tl:tl_textAllCaps="true"
            tl:tl_textBold="BOTH"
            tl:tl_textSelectColor="@color/colorBlack"
            tl:tl_textUnselectColor="@color/colorgray"
            tl:tl_textsize="16sp"/>


        <ImageView
            android:id="@+id/iv_easy_school_add"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/add_blue"
            />

    </RelativeLayout>

    <include layout="@layout/finelinbackground"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_easy_school"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>