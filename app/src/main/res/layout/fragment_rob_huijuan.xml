<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <!--Description:抢通币界面-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rob_huij_iv_picture"
            android:layout_width="match_parent"
            android:layout_height="430px"
            android:src="@drawable/image_1"/>

        <LinearLayout
            android:id="@+id/ll_rob_huij_button"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/crop__button_bar">

            <RelativeLayout
                android:id="@+id/rv_rob_huij_button_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_rob_huij_qiangtongbi"
                    android:layout_width="wrap_content"
                    android:layout_height="170px"
                    android:text="抢通币"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rv_rob_huij_button_qiangyouhuij"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_rob_huij_qiangyouhuij"
                    android:layout_width="wrap_content"
                    android:layout_height="170px"
                    android:text="抢惠卷"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:textColor="#952712"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_rob_huij_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                ></android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <include layout="@layout/viewlinbackground" />
    </LinearLayout>
</LinearLayout>