<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        >

        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/iv_gw_zhaopian"
            android:layout_width="300px"
            android:layout_height="300px"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@drawable/qptheader"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_toRightOf="@id/iv_gw_zhaopian"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_gw_zhiwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业务专员"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tv_gw_yuexin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5-8k"
                    android:textColor="@color/colororange"
                    android:textSize="@dimen/sp_16"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tv_gw_gongsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中煤"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/tv_gw_hangye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="医疗"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="|"/>

                <TextView
                    android:id="@+id/tv_gw_rongzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="天使轮"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/xueli"/>

                <TextView
                    android:id="@+id/tv_gw_xueli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="本科"
                    android:textSize="@dimen/sp_14"/>

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:background="@mipmap/jingyan"/>

                <TextView
                    android:id="@+id/tv_gw_jingyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1年"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/dingwei"/>

                <TextView
                    android:id="@+id/tv_gw_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="西安市"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/tv_gw_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="2.5km"
                    android:textSize="@dimen/sp_14"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:background="@mipmap/liulan"/>

                    <TextView
                        android:id="@+id/tv_gw_shuliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textSize="@dimen/sp_16"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/viewlinbackground"/>

</LinearLayout>