<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:orientation="horizontal"
    android:layout_marginLeft="50px"
    android:layout_marginRight="50px"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_top_item_photo"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@mipmap/time_image"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_top_item_photo"
        android:layout_centerVertical="true"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_top_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菲利克斯"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_top_item_zhiwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招聘专员"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="50px"/>
    </LinearLayout>
        <TextView
            android:id="@+id/tv_top_item_bumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技术部"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="10px"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_top_item_paihang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_top_item_chengshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="西安市"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_item_arrow"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/arrows"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/diliver_child"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="46dp"
        android:background="#a1b2c3"></View>
</RelativeLayout>