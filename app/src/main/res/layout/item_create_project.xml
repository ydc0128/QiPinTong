<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--Description:创投天下的项目推荐条目 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->
    <FrameLayout
        android:layout_width="500px"
        android:layout_height="500px">


        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/siv_item_create_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@drawable/venture"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="55px"
            android:alpha="0.4"
            android:background="@color/colorBlack"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="55px"
            >

            <TextView
                android:id="@+id/tv_item_create_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:ellipsize="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="动漫秀"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/iv_item_create_vip"
                android:layout_width="55px"
                android:layout_height="55px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5px"
                android:layout_toRightOf="@+id/tv_item_create_name"
                android:src="@mipmap/vip"
                />

            <TextView
                android:id="@+id/tv_item_create_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:text="150W"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                />
        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-55px">


        <View
            android:layout_width="500px"
            android:layout_height="165px"
            android:alpha="0.1"
            android:background="@color/colormuchgray"
            />


        <LinearLayout
            android:layout_width="500px"
            android:layout_height="165px"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_item_create_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="儿童动漫电影平台"
                    android:textColor="@color/colormuchgray"
                    android:textSize="16sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:src="@mipmap/location"
                    />

                <TextView
                    android:id="@+id/tv_item_create_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="55px"
                    android:ellipsize="end"
                    android:maxEms="3"
                    android:singleLine="true"
                    android:text="杭州"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center"
                        android:src="@mipmap/eyeimage"

                        />

                    <TextView
                        android:id="@+id/tv_item_create_see_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:text="3288"
                        android:textColor="@color/colormuchgray"
                        android:textSize="14sp"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_item_create_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:text="24"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5px"
                    android:layout_toLeftOf="@+id/tv_item_create_praise"
                    android:src="@mipmap/praise"
                    />

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>