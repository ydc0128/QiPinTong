<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_share"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@color/colorWhite"
        tl:tl_indicator_color="@color/colorblue"
        tl:tl_indicator_width="300px"
        tl:tl_textSelectColor="@color/colorblue"
        tl:tl_textUnselectColor="@color/colorBlack"
        tl:tl_textsize="@dimen/sp_16"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="1dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>