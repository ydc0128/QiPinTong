<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <!--Description:朋友圈动态-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:orientation="horizontal">

        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/SIV_item_icon"
            android:layout_width="140px"
            android:layout_height="140px"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="时光你好任性"
                    android:textColor="@color/colorfriendfont"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_item_delete"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/delete"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="5小时前"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="200px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:lineSpacingExtra="10px"
        android:text="雨中的城市走走停停看看 , 你们的城市下雨了吗"
        android:textColor="@color/colortitletext"
        android:textSize="14sp"/>


    <com.example.qipintongzhongguozongbu.myqipintong.view.FriendNineLayout
        android:id="@+id/layout_nine_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180px"
        android:layout_marginRight="80px"
        android:layout_marginTop="20px"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <ImageView
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170px"
            android:src="@mipmap/location"/>

        <TextView
            android:id="@+id/tv_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="235px"
            android:ellipsize="middle"
            android:maxEms="9"
            android:singleLine="true"
            android:text="西安*雁塔区"
            android:textColor="@color/colorfriendfont"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_item_give_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="23人已打赏"
            android:textColor="@color/colorfriendfont"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:layout_toLeftOf="@+id/tv_item_give_number"
            android:src="@mipmap/give_tongbi"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_edittext"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_item_zan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/reciate"

                    />

                <TextView
                    android:id="@+id/tv_item_zan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="3万"
                    android:textColor="@color/colorfriendfont"
                    android:textSize="14sp"
                    />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_item_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/comment_square"

                    />

                <TextView
                    android:id="@+id/tv_item_commnet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="198"
                    android:textColor="@color/colorfriendfont"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_give_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/fxtongbi"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="打赏"
                    android:textColor="@color/colortextgray"
                    android:textSize="14sp"
                    />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <include layout="@layout/view20background"/>

</LinearLayout>