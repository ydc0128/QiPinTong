<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorbackground"
                android:orientation="vertical">
    <!--Description:公司详情页面 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_company_include"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="530px"
                android:background="@mipmap/background"
                >

                <ImageView
                    android:id="@+id/iv_company_details_shoucang"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_alignParentRight="true"
                    android:layout_margin="40px"
                    android:src="@mipmap/shoucangnomal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/fl_n_position"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:orientation="vertical"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            >


                            <TextView
                                android:id="@+id/tv_company_details_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="康威通信国际"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                />

                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >


                        <View
                            android:id="@+id/vv_company_details"
                            android:layout_width="2px"
                            android:layout_height="40px"
                            android:layout_centerInParent="true"
                            android:background="@color/colorWhite"
                            />

                        <TextView
                            android:id="@+id/tv_company_details_attention_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40px"
                            android:layout_toLeftOf="@+id/vv_company_details"
                            android:text="45"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:layout_toLeftOf="@+id/tv_company_details_attention_number"
                            android:text="关注"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:id="@+id/tv_company_details_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/vv_company_details"
                            android:text="粉丝"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:id="@+id/tv_company_details_fans_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20px"
                            android:layout_toRightOf="@+id/tv_company_details_fans"
                            android:text="88"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="企业信息 : "
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />


                            <TextView
                                android:id="@+id/tv_company_details_industry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="互联网电子商务"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />


                            <TextView
                                android:id="@+id/tv_company_details_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20px"
                                android:text="已上市"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_company_details_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20px"
                                android:text="1000人以上"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />

                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/fl_n_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp">

                    <com.example.qipintongzhongguozongbu.myqipintong.view.CircleImageView
                        android:id="@+id/iv_company_details_icon"
                        android:layout_width="220px"
                        android:layout_height="220px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon"/>

                    <ImageView
                        android:id="@+id/iv_company_details_vip"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10px"
                        android:src="@mipmap/vip"
                        />

                </FrameLayout>
            </RelativeLayout>


            <include layout="@layout/viewlinbackground"/>

            <include layout="@layout/viewlinbackground"/>


            <com.flyco.tablayout.CommonTabLayout
                android:id="@+id/CTL_company"
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:background="@drawable/lin_border"
                app:tl_indicator_bounce_enable="true"
                app:tl_indicator_color="@color/colorblue"
                app:tl_indicator_height="1dp"
                app:tl_indicator_width="200px"
                app:tl_textSelectColor="@color/colorblue"
                app:tl_textUnselectColor="@color/colortitletext"
                app:tl_textsize="18sp"
                ></com.flyco.tablayout.CommonTabLayout>


            <include
                android:id="@+id/include_compay_pager_home"
                layout="@layout/pager_company_home"
                />

            <include
                android:id="@+id/include_compay_pager_position"
                layout="@layout/pager_company_position"
                android:visibility="gone"/>

            <include
                android:id="@+id/include_compay_dynamic"
                layout="@layout/pager_person_dynamic"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_company_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/bottom_button_company"/>

    </RelativeLayout>


</RelativeLayout>