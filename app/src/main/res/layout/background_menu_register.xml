<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <!--注册-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="会员注册"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

    <include layout="@layout/finelinbackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"

            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            />

        <EditText
            android:id="@+id/et_register_mold_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:background="@null"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <include layout="@layout/finelinbackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        >
        <TextView
            android:id="@+id/tv_register_mod_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            />
        <EditText
            android:id="@+id/et_register_mod_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:background="@null"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
    <include layout="@layout/finelinbackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="验证码"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                />
            <EditText
                android:id="@+id/et_register_auth_code"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint=" "
                android:background="@null"
                />
            <Button
                android:id="@+id/bt_register_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:background="@drawable/shape_button_blue"
                android:text="获取验证码"
                android:textColor="@color/colorblue"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/finelinbackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        >
        <TextView
            android:id="@+id/tv_register_assword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            />
        <EditText
            android:id="@+id/et_register_assword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:background="@null"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <include layout="@layout/finelinbackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        >

        <TextView
            android:id="@+id/tv_confirm_your_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重复密码"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            />

        <EditText
            android:id="@+id/et_register_confirm_your_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:background="@null"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <include layout="@layout/finelinbackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="150px"
        android:layout_marginBottom="150px">
        <Button
            android:id="@+id/bt_register_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue"
            android:text="注 册"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:layout_marginBottom="100px">
        <TextView
            android:id="@+id/tv_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已是会员，请登陆"
            android:textColor="#403870"
            android:textSize="14sp"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>