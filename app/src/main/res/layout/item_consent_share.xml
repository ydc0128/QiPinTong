<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  android:background="@color/colorWhite"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">


        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/siv_item_consent_icon"
            android:layout_width="250px"
            android:layout_height="250px"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_toRightOf="@+id/siv_item_consent_icon"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_consent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:singleLine="true"
                    android:text="老鬼火锅大雁塔店"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:singleLine="true"
                    android:text="已共享"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/location" />

                <TextView

                    android:id="@+id/tv_item_consent_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="55px"
                    android:text="西安"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/sp_16" />


                <ImageView
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@+id/tv_item_consent_city"
                    android:src="@mipmap/location" />


                <TextView
                    android:id="@+id/tv_item_consent_see_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="95px"
                    android:layout_toRightOf="@+id/tv_item_consent_city"
                    android:text="3288"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_item_consent_share_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:text="85"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/view20background" />

</LinearLayout>