<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:gravity="center_vertical"
              android:orientation="vertical">
    <!--登陆-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_horizontal"
            android:text="使用账号和密码登陆"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_weight="0.5"
                android:text="账号"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                />

            <EditText
                android:id="@+id/et_login_id"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号码"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/finelinbackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_weight="0.5"
                android:text="密码"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                />

            <EditText
                android:id="@+id/et_login_password_id"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/finelinbackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="100px">

        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue"
            android:text="登 陆"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_login_retrieve_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="#403870"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_login_user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_login_retrieve_password"
            android:paddingLeft="30px"
            android:text="用户注册"
            android:textColor="#403870"
            android:textSize="14sp"
            />
    </LinearLayout>
    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:paddingTop="100px"-->
    <!--android:paddingBottom="100px">-->
    <!--<TextView-->
    <!--android:id="@+id/tv_other_land"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="其他登陆方式"-->
    <!--android:textColor="#403870"-->
    <!--android:textSize="14sp"-->
    <!--android:gravity="center"/>-->
    <!--</RelativeLayout>-->


    <Button
        android:id="@+id/bt_wx_login"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:text="微信登录"
        />
    <Button
        android:id="@+id/bt_QQ_login"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:text="QQ登录"
        />
</LinearLayout>


