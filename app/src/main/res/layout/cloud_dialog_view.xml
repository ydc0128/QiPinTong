<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="1000px"
    android:layout_height="1400px"
    android:background="@color/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginLeft="50px"
    android:layout_marginTop="100px"
    >

    <ImageView
        android:id="@+id/iv_cdv_photo"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/mq_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cdv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风之子"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"/>
            <ImageView
                android:id="@+id/iv_dialog_photo_xingbie"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/nan"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_dialog_sshiyongguize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用规则"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50px"
                    />
            </RelativeLayout>
            </LinearLayout>
        <TextView
            android:id="@+id/tv_cdv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="陕西省 西安市"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/iv_cdv_QR_code"
            android:layout_width="500px"
            android:layout_height="500px"
            android:src="@mipmap/erweimatihuan"
            android:layout_gravity="center_horizontal"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫企聘通二维码，加我好友"
        android:layout_marginTop="100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50px"/>
</LinearLayout>
<include layout="@layout/finelinbackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/liulan"
                android:layout_marginTop="20px"/>

            <TextView
                android:id="@+id/tv_cdv_moods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人气：0"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px" />
        </LinearLayout>
        <include layout="@layout/link_h"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/fensi"
                android:layout_marginTop="20px"/>
            <TextView
                android:id="@+id/tv_cdv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝：0"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/finelinbackground"/>
</LinearLayout>