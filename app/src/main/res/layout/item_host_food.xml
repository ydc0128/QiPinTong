<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <!--Description: -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45px"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        >

        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/siv_item_host_food"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginLeft="30px"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@mipmap/f009"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_host_food_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="天下第一面(逸翠园店)"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/tv_item_host_food_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="西餐       自助餐"
                android:textColor="@color/colorgray"
                android:textSize="14sp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >


                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/location"
                    />


                <TextView
                    android:id="@+id/tv_item_host_food_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70px"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="大雁塔"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/tv_item_host_food_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2.5km"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/tv_item_host_food_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="9527"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"
                    />


                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:layout_toLeftOf="@+id/tv_item_host_food_number"
                    android:src="@mipmap/eyeimage"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view20background"/>

</LinearLayout>