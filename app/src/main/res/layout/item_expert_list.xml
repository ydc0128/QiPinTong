<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">


        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/siv_item_expert_icon"
            android:layout_width="250px"
            android:layout_height="250px"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@+id/tv_item_expert_share"
            android:layout_toRightOf="@+id/siv_item_expert_icon"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_expert_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="韩雪冬"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_item_expert_sex"
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/nan" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/tv_item_expert_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:text="西安"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/sp_16" />


                <ImageView
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40px"
                    android:src="@mipmap/location" />


                <TextView
                    android:id="@+id/tv_item_expert_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:text="3288"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_expert_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_button_orange_fang"
            android:paddingBottom="10px"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:paddingTop="10px"
            android:text="共享"
            android:textColor="@color/colororange"
            android:textSize="16sp" />


    </RelativeLayout>

    <include layout="@layout/view20background" />

</LinearLayout>