<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rf_position_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <!--Description:有才有貌职位详情页 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_position_deatils"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="530px"
                android:background="@mipmap/background"
                >


                <ImageView
                    android:id="@+id/iv_position_details_shoucang"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_alignParentRight="true"
                    android:layout_margin="40px"
                    android:src="@mipmap/shoucangnomal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/fl_n_position"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:orientation="vertical"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            >


                            <TextView
                                android:id="@+id/tv_position_details_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="康威通信国际"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                />

                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >


                        <View
                            android:id="@+id/vv_position_details"
                            android:layout_width="2px"
                            android:layout_height="40px"
                            android:layout_centerInParent="true"
                            android:background="@color/colorWhite"
                            />

                        <TextView
                            android:id="@+id/tv_position_details_attention_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40px"
                            android:layout_toLeftOf="@+id/vv_position_details"
                            android:text="45"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:layout_toLeftOf="@+id/tv_position_details_attention_number"
                            android:text="关注"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:id="@+id/tv_position_details_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/vv_position_details"
                            android:text="粉丝"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:id="@+id/tv_position_details_fans_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20px"
                            android:layout_toRightOf="@+id/tv_position_details_fans"
                            android:text="88"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="企业信息 : "
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />


                            <TextView
                                android:id="@+id/tv_position_details_industry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="互联网电子商务"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />


                            <TextView
                                android:id="@+id/tv_position_details_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20px"
                                android:text="已上市"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_position_details_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20px"
                                android:text="1000人以上"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                />

                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_n_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp">

                    <com.example.qipintongzhongguozongbu.myqipintong.view.CircleImageView
                        android:id="@+id/iv_position_details_icon"
                        android:layout_width="220px"
                        android:layout_height="220px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon"/>

                    <ImageView
                        android:id="@+id/iv_position_details_vip"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10px"
                        android:src="@mipmap/vip"
                        />

                </FrameLayout>


            </RelativeLayout>


            <include layout="@layout/viewlinbackground"/>

            <include layout="@layout/viewlinbackground"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="40px"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/tv_position_details_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="中级UI设计师"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_position_details_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@+id/tv_position_details_profession"
                        android:text="(全职 5-8k)"
                        android:textColor="@color/colororange"
                        android:textSize="14sp"
                        />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/location"
                        />

                    <TextView
                        android:id="@+id/tv_position_details_locations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="西安"
                        android:textColor="@color/colormuchgray"
                        android:textSize="14sp"
                        />


                    <ImageView
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="100px"
                        android:src="@mipmap/time_image"/>

                    <TextView
                        android:id="@+id/tv_position_details_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5px"
                        android:text="3年"
                        android:textColor="@color/colormuchgray"
                        android:textSize="14sp"
                        />


                    <ImageView
                        android:layout_width="55px"
                        android:layout_height="55px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="100px"
                        android:src="@mipmap/acaimgae"
                        />

                    <TextView
                        android:id="@+id/tv_position_details_education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="本科"
                        android:textColor="@color/colormuchgray"
                        android:textSize="14sp"
                        />
                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/viewlinbackground"/>

            <include layout="@layout/viewlinbackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:text="职位描述"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_position_details_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:nestedScrollingEnabled="false"
                    ></android.support.v7.widget.RecyclerView>


            </RelativeLayout>

            <include layout="@layout/viewlinbackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:text="任职资格"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_position_details_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:nestedScrollingEnabled="false"
                    ></android.support.v7.widget.RecyclerView>


            </RelativeLayout>

            <include layout="@layout/viewlinbackground"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210px"
                >


                <com.example.qipintongzhongguozongbu.myqipintong.view.CircleImageView
                    android:id="@+id/civ_position_person_icon"
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/icon"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="35px"
                    android:layout_marginTop="45px"
                    android:layout_toRightOf="@+id/civ_position_person_icon"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/tv_position_person_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="陈经理"
                        android:textColor="@color/colortitletext"
                        android:textSize="16sp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_position_details_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="行政人事"
                            android:textColor="@color/colormuchgray"
                            android:textSize="14sp"
                            />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_add_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50px"
                    android:background="@drawable/shape_blue_lin"
                    android:orientation="horizontal"
                    android:paddingBottom="15px"
                    android:paddingLeft="25px"
                    android:paddingRight="25px"
                    android:paddingTop="15px"
                    >

                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:src="@mipmap/add_friend"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:text="加好友"
                        android:textColor="@color/colorbluebg"
                        android:textSize="16sp"
                        />


                </LinearLayout>


            </RelativeLayout>


            <include layout="@layout/viewlinbackground"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460px"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/phone_blue"
                        />

                    <TextView
                        android:id="@+id/tv_position_details_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:text="029-88888888"
                        android:textColor="@color/colormuchgray"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <include layout="@layout/finelinbackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/url_blue"
                        />

                    <TextView
                        android:id="@+id/tv_position_details_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:text="www.baidu.com"
                        android:textColor="@color/colormuchgray"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <include layout="@layout/finelinbackground"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/city_blue"
                        />

                    <TextView
                        android:id="@+id/tv_position_details_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:text="西安康威通信国际"
                        android:textColor="@color/colormuchgray"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <include layout="@layout/finelinbackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/location_blue"
                        />

                    <TextView
                        android:id="@+id/tv_position_details_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:text="西安市雁塔区逸翠园i都会1号楼2单元"
                        android:textColor="@color/colormuchgray"
                        android:textSize="16sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/viewlinbackground"/>

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl_position_deatils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <include layout="@layout/bottom_button_company"/>

    </RelativeLayout>

</RelativeLayout>