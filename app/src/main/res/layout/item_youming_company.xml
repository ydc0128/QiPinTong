<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--Description:名企在线的条目-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px">


        <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
            android:id="@+id/siv_item_youming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_image"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:layout_gravity="bottom"
            android:alpha="0.3"
            android:background="@color/black"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_item_famous_youming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:ellipsize="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="福建万福娃拍摄"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/iv_item_famous_vip"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_item_famous_youming"
                android:src="@mipmap/vip"
                />


            <TextView
                android:id="@+id/tv_item_youming_see_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                />


            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/tv_item_youming_see_number"
                android:src="@mipmap/eyeimage_bg"
                />
        </RelativeLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:alpha="0.1"
            android:background="@color/colormuchgray"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_item_youming_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="互联网/电子商务"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/tv_item_youming_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="20px"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:singleLine="true"
                    android:text="福州市"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_item_youming_city"
                    android:src="@mipmap/location"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_item_youming_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:text="销售客服"
                    android:textColor="@color/colorblue"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_item_youming_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="等1个职位"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>