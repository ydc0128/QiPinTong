<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view20background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_binding_mobile_mane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_weight="1"
                android:background="@null"
                android:text="菲利克斯"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <include layout="@layout/finelinbackground" />

        <LinearLayout
            android:id="@+id/ll_binding_mobile_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_weight="1"
                android:background="@null"
                android:text="30"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <include layout="@layout/finelinbackground" />

        <LinearLayout
            android:id="@+id/ll_binding_mobile_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_binding_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="西安"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/down" />
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/finelinbackground" />

        <LinearLayout
            android:id="@+id/ll_binding_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <include layout="@layout/finelinbackground" />

        <LinearLayout
            android:id="@+id/ll_binding_mobile_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:background="@null"
                android:hint="请输入手机号"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_binding_phone_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_button_blue"
                    android:padding="20px"
                    android:text="获取验证码"
                    android:textColor="@color/colorblue"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="160px">

        <Button
            android:id="@+id/bt_biding_phone_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue"
            android:text="下一步"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>