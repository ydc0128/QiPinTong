<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--Description:有商有客菜品条目 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="525px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_commerce_greens"
            android:layout_width="330px"
            android:layout_height="210px"
            android:layout_marginTop="70px"
            android:scaleType="centerCrop"
            android:src="@mipmap/greens"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginTop="60px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_commerce_P"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/p"
                    />

                <ImageView
                    android:id="@+id/iv_commerce_wifi"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/iv_commerce_P"
                    android:src="@mipmap/wifi"
                    />

                <TextView
                    android:id="@+id/tv_greens_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="鲜生活•喵小春的鱼"
                    android:textColor="@color/colortitletext"
                    android:textSize="@dimen/sp_16"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <com.example.qipintongzhongguozongbu.myqipintong.ratingbar.MaterialRatingBar
                    android:id="@+id/mrb_star"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="330px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:progressTint="@color/colororange"
                    android:rating="3"
                    android:stepSize="0.1"
                    />


                <TextView
                    android:id="@+id/tv_commerce_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/mrb_star"
                    android:text="4.2分"
                    android:textColor="@color/colororange"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/tv_greens_CNY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="¥ 39"
                    android:textColor="@color/colororange"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:layout_toLeftOf="@+id/tv_greens_CNY"
                    android:text="人均 :"
                    android:textSize="@dimen/sp_14"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_commerce_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="大雁塔"
                    android:textColor="@color/colormuchgray"
                    android:textSize="@dimen/sp_14"
                    />


                <TextView
                    android:id="@+id/tv_commerce_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/tv_commerce_location"
                    android:text="西餐"
                    android:textColor="@color/colormuchgray"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/tv_commerce_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:text="2.5km"
                    android:textColor="@color/colormuchgray"
                    android:textSize="@dimen/sp_14"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="245px"
                android:orientation="vertical"

                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="25px"
                    android:background="@color/colorlinegray"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_commerce_money"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/bi"

                        />

                    <TextView
                        android:id="@+id/tv_commerce_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="55px"
                        android:text="10通币冲抵一元"
                        android:textColor="@color/colortitletext"
                        android:textSize="@dimen/sp_14"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/hui"
                        />

                    <TextView
                        android:id="@+id/tv_commerce_favorable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="55px"
                        android:text="每满10减1(买单立享)"
                        android:textColor="@color/colormuchgray"
                        android:textSize="@dimen/sp_14"
                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="45px"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/viewlinbackground"/>

</LinearLayout>