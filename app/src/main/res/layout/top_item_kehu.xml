<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/item_top_kehu"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@mipmap/add"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40px">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/item_top_kehu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丁妮阁*菲儿"/>
                <ImageView
                    android:id="@+id/item_kehu_xingbie"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:src="@mipmap/nan"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10px"
                >
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@mipmap/jingyan"/>
                <TextView
                    android:id="@+id/item_top_kehu_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26"
                    android:layout_marginLeft="10px"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/location"
                />
            <TextView
                android:id="@+id/tv_item_kehu_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西安市"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@mipmap/jingyan"
                    />
                <TextView
                    android:id="@+id/tv_item_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06-03 22:17:34"/>
            </LinearLayout>
        </LinearLayout>
            </RelativeLayout>
    <include layout="@layout/finelinbackground"/>
</LinearLayout>
    </LinearLayout>