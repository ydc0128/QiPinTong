<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:background="@color/colorblue"
        android:paddingLeft="50px"
        >
        <ImageView
            android:id="@+id/background_post_a_welfare_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@color/black"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:text="福利待遇"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        >
    <CheckedTextView
        android:id="@+id/cv_five_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:text="五险一金"/>
        <CheckedTextView
            android:id="@+id/cv_double_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="年底双薪"/>

        <CheckedTextView
            android:id="@+id/cv_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="绩效奖金"/>

        <CheckedTextView
            android:id="@+id/cv_fenhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="年终分红"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cv_qipiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        >
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="期票股权"/>
        <CheckedTextView
            android:id="@+id/cv_jiaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="加班补助"/>

        <CheckedTextView
            android:id="@+id/cv_quanqin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="全勤奖"/>

        <CheckedTextView
            android:id="@+id/cv_chizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="包吃包住"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        >
        <CheckedTextView
            android:id="@+id/cv_jiaotong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="交通补助"/>
        <CheckedTextView
            android:id="@+id/cv_canbu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="餐补"
            />
        <CheckedTextView
            android:id="@+id/cv_fangbu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="房补"/>
        <CheckedTextView
            android:id="@+id/cv_tongxun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="通讯补助"/>
        <CheckedTextView
            android:id="@+id/cv_tijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="定期体检"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        >
        <CheckedTextView
            android:id="@+id/cv_cainuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="采暖补助"/>
        <CheckedTextView
            android:id="@+id/cv_nianjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="带薪年假"/>

        <CheckedTextView
            android:id="@+id/cv_tanxinggongzuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="弹性工作补充"/>

        <CheckedTextView
            android:id="@+id/cv_yiliao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="医疗保险"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        >
        <CheckedTextView
            android:id="@+id/cv_banche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="免费班车"/>
        <CheckedTextView
            android:id="@+id/cv_lvyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="员工旅游"/>
        <CheckedTextView
            android:id="@+id/cv_gaowen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="高温补贴"/>
        <CheckedTextView
            android:id="@+id/cv_jieri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="节日福利"/>
    </LinearLayout>
</LinearLayout>