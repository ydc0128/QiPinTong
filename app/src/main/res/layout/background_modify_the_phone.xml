<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
android:gravity="center_vertical"
    android:background="@color/background">
    <!--验证手机-->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="140px"

    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="当前手机号"
    android:textColor="@color/colorBlack"
    android:textSize="@dimen/sp_16"/>
    <TextView
    android:id="@+id/tv_v_t_m_p_shouji"
    android:layout_marginTop="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="138*****138"
    android:textSize="@dimen/sp_14"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="10px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"/>
        <EditText
            android:id="@+id/et_v_t_m_p_phone_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:layout_marginLeft="50px"
            />
    </LinearLayout>

    <include layout="@layout/finelinbackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"/>
        <EditText
            android:id="@+id/et_v_t_m_p_phone_verify_m"
            android:paddingLeft="50px"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:hint="请输入"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_v_t_m_p_phone_verify_m"
                android:layout_width="270px"
                android:layout_height="80px"
                android:text="获取验证码"
                android:textColor="@color/colorblue"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_button_blue"
                />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/finelinbackground"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="100px"
        >
        <Button
            android:id="@+id/btt_v_t_m_p_phone_confirm_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_blue"/>
    </LinearLayout>
</LinearLayout>