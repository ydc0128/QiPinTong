<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <!--Description:有才有貌个人详情 动态条目 -->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:orientation="horizontal">

        <com.example.qipintongzhongguozongbu.myqipintong.view.CircleImageView
            android:id="@+id/CIV_hr_home_focus_icon"
            android:layout_width="140px"
            android:layout_height="140px"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_person_aynmic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="韩雪冬"
                    android:textColor="@color/colortitletext"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_person_aynmic_vip"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/vip_yellow"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_person_aynmic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2016-10-28"
                    android:textColor="@color/colorgray"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView

        android:id="@+id/tv_person_aynmic_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:lineSpacingExtra="10px"
        android:text="雨中的城市走走停停看看 , 你们的城市下雨了吗   雨中的城市走走停停看看 , 你们的城市下雨了吗"
        android:textColor="@color/colortextgray"
        android:textSize="14sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_person_aynmic_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="200px"
            android:layout_marginRight="90px"
            android:layout_marginTop="30px"
            android:nestedScrollingEnabled="false"
            ></android.support.v7.widget.RecyclerView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@drawable/shape_edittext"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:id="@+id/iv_person_aynmic_share"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/relaynomai"

                    />

                <TextView
                    android:id="@+id/tv_item_share_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_person_aynmic_share"
                    android:text="5万"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />


            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="1sp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorlinegray"
            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:id="@+id/iv_person_aynmic_comment"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/comment"

                    />

                <TextView
                    android:id="@+id/tv_item_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_person_aynmic_comment"
                    android:text="3万"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="1sp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorlinegray"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:id="@+id/iv_person_aynmic_zan"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/zan"

                    />

                <TextView
                    android:id="@+id/tv_item_friend_zan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_person_aynmic_zan"
                    android:text="3万"
                    android:textColor="@color/colormuchgray"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/view20background"/>
</LinearLayout>