<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--Description:有商有客店家详情页面-->
    <!--Author     :感觉自己懵懵哒-->
    <!--E-mail     :anber1229423614@163.com-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:orientation="horizontal">


                <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
                    android:id="@+id/iv_commerce_food_icon"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/shape_image"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/f017" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_commerce_food_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="天下第一面(逸翠园店)"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_commerce_food_type"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="西餐            自助餐"
                        android:textColor="@color/colorgray"
                        android:textSize="14sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/tv_commerce_food_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:maxEms="4"
                            android:singleLine="true"
                            android:text="大雁塔"
                            android:textColor="@color/colorgray"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="45px"
                                android:layout_height="45px"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="15px"
                                android:src="@mipmap/location" />


                            <TextView
                                android:id="@+id/tv_commerce_food_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5km"
                                android:textColor="@color/colorgray"
                                android:textSize="14sp" />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_commerce_food_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:maxEms="4"
                            android:singleLine="true"
                            android:text="9527"
                            android:textColor="@color/colorgray"
                            android:textSize="14sp" />


                        <ImageView
                            android:layout_width="55px"
                            android:layout_height="55px"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15px"
                            android:layout_toLeftOf="@+id/tv_commerce_food_number"
                            android:src="@mipmap/eyeimage" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/view20background" />


            <LinearLayout
                android:id="@+id/ll_commerce_daijin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:src="@mipmap/quan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:text="代金券"
                    android:textColor="@color/colorgray"
                    android:textSize="16sp" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_commerce_daijin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="120px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

            <include layout="@layout/view1background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px">


                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/maney_pay" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120px"
                    android:text="买单"
                    android:textColor="@color/colorgray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_commerce_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:background="@drawable/shape_blue"
                    android:paddingBottom="10px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="10px"
                    android:text="支付"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


            </RelativeLayout>


            <include layout="@layout/view20background" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/location" />


                <TextView
                    android:id="@+id/tv_commerce_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100px"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="西万路口西万路口西万路口"
                    android:textColor="@color/colorgray"
                    android:textSize="@dimen/sp_16" />


                <ImageView
                    android:id="@+id/iv_commerce_phone"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:src="@mipmap/phone_black" />


                <View
                    android:layout_width="3px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:layout_toLeftOf="@+id/iv_commerce_phone"
                    android:background="@color/colorgray" />

                <ImageView
                    android:id="@+id/iv_commerce_daohang"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="220px"
                    android:src="@mipmap/location_car" />


            </RelativeLayout>


            <include layout="@layout/view15background" />

            <include layout="@layout/view15background" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="40px"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="店面环境"
                    android:textColor="@color/colorgray"
                    android:textSize="16sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="30px"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_commerce_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <include layout="@layout/view15background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="40px"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="商家活动"
                    android:textColor="@color/colorgray"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="40px"
                android:orientation="horizontal">


                <com.example.qipintongzhongguozongbu.myqipintong.view.SquareImageView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iv_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_commerce_play"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="10px"
                        android:maxLines="2"
                        android:text="仅售168888元 价值10元的香辣腿堡一份 全场通用 可叠加使用 提供免费wifi"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_commerce_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="2017-7-7"
                            android:textColor="@color/colorgray"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_commerce_ride"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="阅读量 777"
                            android:textColor="@color/colorgray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>